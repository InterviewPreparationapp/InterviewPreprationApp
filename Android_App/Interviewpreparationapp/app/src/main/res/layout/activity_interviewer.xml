<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".InterviewerLogin">


    <androidx.cardview.widget.CardView
        android:id="@+id/interviewerloginid"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:elevation="25sp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Interviewer Login"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="35dp"
            android:textStyle="bold"
           />

        <EditText
            android:id="@+id/InterviwerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="45dp"/>

        <EditText
            android:id="@+id/InterviwerPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="90dp"/>

        <Button
            android:id="@+id/Interviwerloginbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="35dp"
            android:background="#35E8F8"/>

        <Button
            android:id="@+id/Interviwerregisternbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="155dp"
            android:background="#95FF6F00"/>

        <TextView
            android:id="@+id/InterviwerResetpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forget password? Reset password"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="35dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>