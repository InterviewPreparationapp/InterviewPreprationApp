<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InterViewgiverHomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#15903A3A"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <Button
            android:id="@+id/interviewetimeset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:id="@+id/texttimeset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time slot"
            android:layout_below="@+id/interviewetimeset"
            android:textSize="25sp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="25dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:gravity="center_vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/interviewrequest"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="15dp"
        android:padding="15dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="interview request"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="15dp"
            android:padding="15dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/interviewrequest">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="give feedback"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>